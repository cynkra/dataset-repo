@import 'mixins'
@import 'colors'

.header
  padding 6px 0
  line-height 60px
  box-shadow 0 2px 5px rgba(0,0,0,0.26)

  background-color indigo-500
  color #000

  &-inner
    container()

  img
    vertical-align middle

  h1
    display inline-block
    vertical-align middle
    margin 0
    color #dadada
    font-weight 300

    &:hover
      color #fff
