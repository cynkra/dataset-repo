@import '../common/colors';

.filter
  &-group
    &-heading
      margin 0
      padding 15px
      background-color indigo-500
      color #fff
      box-shadow 0 2px 5px rgba(0,0,0,0.26)

    &-body
      margin 5px 0

    &-line
      display block
      padding 10px 15px
      color #000
      border-bottom 1px solid #ddd

      &:last-child
        border-bottom none

      input[type=checkbox]
        margin-right 5px
