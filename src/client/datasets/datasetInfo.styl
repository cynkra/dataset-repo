@import '../common/mixins'

.DatasetInfo
  &-header
    padding-bottom 20px
    border-bottom 1px solid #ddd
    clearfix()

  &-summary
    width 50%
    float left

  &-heading
    border-bottom 1px solid #ddd

  &-image
    text-align center
    margin 0 3%
    width 44%
    float left

    img
      max-width 100%
      max-height 500px

  &-versions
    margin 0
    padding 0
    list-style none

    &-heading
      border-bottom 1px solid #ddd
      margin-bottom 0

    h4
      margin-top .75em
      margin-bottom 0

    small
      font-size 14px

    &-modifications
      font-size 14px

  &-details
    border-bottom 1px solid #ddd

    dt
      float left
      font-weight bold
      margin-right 10px

    dt,
    dd
      line-height 2

    &-dataTypes
      list-style none
      padding 0
      margin 0
      clearfix()

      li
        float left

        &:after
          content: ', '
          margin-right 0.25em

        &:last-child:after
          content: ''

      abbr
        border none



