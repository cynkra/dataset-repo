@import '../../node_modules/normalize.css/normalize.css'

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

body
  background-color #f0f0f0

#app
  width 992px
  margin 30px auto
  padding 20px
  background-color #fff
  border 1px solid #ccc
  border-radius 4px
  box-shadow 0 0 0 4px rgba(0,0,0,.05)

.datasetList
  clearfix()

.primary
  width 792px
  float right

.sidebar
  width 200px

.datasets
  margin 0
  padding 0
  list-style none

.dataset
  border-bottom 1px dotted #ddd
  padding-bottom 20px
  margin-bottom 20px

  &-title
    font-size 16px
    margin-top 0
    margin-bottom .5em
    line-height 1.3

    small
      font-weight normal
      margin 0 5px

  &-uploader
    font-size 16px

    small
      margin 0 5px

.tags
  margin 10px 0

.tag
  display inline-block
  border-radius 3px
  padding 3px
  margin 0 5px 0 0
  font-weight bold

  &--domain
    background-color #ffe6ab

  &--artificial
    background-color #ff0

